{% trans_default_domain 'FOSUserBundle' %}
<main id="main" role="main">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form id="form_login" action="{{ path("fos_user_security_check") }}" method="post" role="form">
                    <div class="login-header">
                        <h1 class="h4">Log in to your Shopify store</h1>
                    </div>
                    {% if error %}
                        <div class="toast" role="alert">
                            <i class="fa fa-info-circle"></i>
                            <button href="#" class="close" data-dismiss="alert" aria-label="close">&times;</button>
                            <span>Erreur nom d'utilisateur ou mot de passe !</span>
                        </div>
                    {% endif %}
                    <h3 class="text-center">Oakleaf</h3>
                    <div class="login-content">
                        <div class="form-group">
                            <input type="text" id="username" class="form-control input-lg" name="_username" placeholder="Nom d'utilisateur ou email" value="{{ last_username }}" required="required" />
                        </div> <!-- .form-group -->
                        <div class="form-group">
                            <input type="password" id="password" class="form-control input-lg" name="_password" placeholder="Mot de passe" required="required" />
                        </div> <!-- .form-group -->
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">
                            <input type="submit" id="_submit" class="btn btn-lg btn-block btn-primary" name="_submit" value="Se Connecter !" />
                        </div>
                    </div>
                    <div class="login-footer">
                        <div class="row">
                            <div class="col-md-8">
                                <div class="checkbox">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                    <label for="remember_me">Garder me session active</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <a href="{{ path('fos_user_resetting_request') }}" title="Mot de passe oublié ?" class="pull-right">Oublié ?</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>