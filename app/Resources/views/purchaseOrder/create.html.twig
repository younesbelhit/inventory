{% extends 'base.html.twig' %}
{% block title %} Bons de commandes | {{ parent() }} {% endblock %}
{% block content_heading %}
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('purchaseOrder') }}">Bons de commandes</a></li>
                <li class="active">Nouveau</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" form="PurchaseOrder" class="btn btn-primary"> Enregistrer </button>
            <a href="{{ path('purchaseOrder') }}" class="btn btn-default"> Annuler </a>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-5">
            <a href="#" class="btn btn-default"> <i class="icon-mail"></i> Envoyer par couriel </a>
            <a href="{{ path('print_purchaseOrder') }}" class="btn btn-default"> <i class="icon-print-1"></i> Imprimer </a>
            <a href="#" class="btn btn-default"> <i class="icon-ok-circle"></i> Confirmer l'achat </a>
        </div>
        <div class="col-md-7">
            <ul class="list-unstyled form_status">
                <li class="active" data-id="draft">
                    <span>Bon de commande brouillon</span>
                </li>
                <li class="" data-id="approved">
                    <span>Bon de commande</span>
                </li>
                <li class="" data-id="done">
                    <span>Terminé</span>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
{% block main_content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-md-offset-1" style="margin-top: 10px;">
                <div class="panel">
                    <div class="panel-heading">
                        <h4>Devis /</h4>
                    </div>
                    <div class="panel-body">
                      {{ form_start(form, { attr: { 'action': path('create_purchaseOrder'), 'id': 'PurchaseOrder' ,'role': 'form' } }) }}
                        <div class="row">
                            <div class="col-md-2">
                                <label for="vendor">Fournisseur</label>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_widget(form.supplier, { attr: { 'class': 'form-control' } }) }}
                                </div>
                            </div>
                            <div class="col-md-1">
                                <a href="#" style="margin-left: -20px;" class="btn btn-sm btn-default waves-effect"
                                   data-placement="right" data-toggle="modal"
                                   data-rel="tooltip" data-target="#supplier">
                                    <i class="fa fa-share-square-o"></i>
                                </a>
                            </div>
                            <div class="col-md-2">
                                <label for="date">Date de commande</label>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_widget(form.orderDate, { attr: { 'class': 'form-control datepicker' } }) }}
                                </div>
                            </div>
                        </div> <!-- .row -->
                        <div class="row">
                            <div class="col-md-2">
                                <label for="#">Référence du fournisseur</label>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_widget(form.supplierNumber, { attr: { 'class': 'form-control' } }) }}
                                </div>
                            </div>
                        </div> <!-- .row -->
                        <br/>
                        <div class="tab-control">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#purchaseOrderDetail" aria-controls="home" role="tab" data-toggle="tab">Lignes de la commande</a></li>
                                <li role="presentation"><a href="#invoice" aria-controls="invoice" role="tab" data-toggle="tab">Factures et bons de réception</a></li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane active" id="purchaseOrderDetail">
                                    <table id="table_order_detail" class="table table-condensed table-striped table-responsive">
                                        <thead>
                                        <tr>
                                            <th>Article</th>
                                            <th>Quantité</th>
                                            <th>Prix unitaire</th>
                                            <th>Taxes</th>
                                            <th>Sous-Total</th>
                                            <th><i class="fa fa-trash"></i></th>
                                        </tr>
                                        </thead>
                                        <tbody data-prototype="{{ form_widget(form.purchaseOrderDetail.vars.prototype)|e('html_attr') }}">
                                        {% for purchaseOrderDetail in form.purchaseOrderDetail %}
                                            <tr>
                                                <td>{{ form_widget(purchaseOrderDetail.product) }}</td>
                                                <td>{{ form_widget(purchaseOrderDetail.orderQty) }}</td>
                                                <td>{{ form_widget(purchaseOrderDetail.unitPrice) }}</td>
                                                <td>{{ form_widget(purchaseOrderDetail.unitPrice) }}</td>
                                                <td>{{ form_widget(purchaseOrderDetail.lineTotal) }}</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    <hr/>
                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-8">
                                            <table class="table table-no-bordred table-responsive">
                                                <tbody>
                                                <tr>
                                                    <td>Montant hors taxe</td>
                                                    <td><span class="pull-right">{{ form_widget(form.totalHT, { attr: { 'class': 'form-control', 'placeholder': '0,00' } }) }}</span></td>
                                                </tr>
                                                <tr>
                                                    <td>Taxes</td>
                                                    <td><span class="pull-right">0,00</span></td>
                                                </tr>
                                                <tr>
                                                    <td><h4>Total</h4></td>
                                                    <td>{{ form_widget(form.totalTTC, { attr: { 'class': 'form-control', 'placeholder': '0,00' } }) }}</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div> <!-- tab-pane -->
                                <div role="tabpanel" class="tab-pane" id="invoice">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label for="#">Date prévue</label>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                {{ form_widget(form.shipDate, { attr: { 'class': 'form-control datepicker' } }) }}
                                            </div>
                                        </div>
                                    </div> <!-- .row -->
                                </div>
                            </div>
                        </div> <!-- .tab-control -->
                     {{ form_end(form) }}
                    </div> <!-- .panel-body -->
                </div> <!-- .panel -->
            </div>
        </div>
    </div>

    <div class="modal fade bs-example-modal-lg" id="supplier" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Nouveau fournisseur</h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppBundle:Supplier:createContent')) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" form="supplier" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
