{% extends 'install.html.twig' %}
{% block title %} {{ parent() }} | install {% endblock %}
{% block body %}


    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel" style="margin-top: 50px;margin-bottom: 50px!important;">
                    <div class="panel-body">
                        <fieldset>
                            <legend> Paramètres de le société </legend>
                            {{ form_start(form, { attr: { 'method': 'POST', 'action': path('setup_config'), 'id': 'company' ,'role': 'form' } }) }}
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="">Nom de la société</label>
                                            </div>
                                            <div class="col-md-7">
                                                <div class="form-group">
                                                    {{ form_widget(form.name, { attr: { 'class': 'form-control' } }) }}
                                                </div>
                                            </div>
                                        </div> <!-- .row -->
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="">Slogan de la société</label>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    {{ form_widget(form.slogan, { attr: { 'class': 'form-control' } }) }}
                                                </div>
                                            </div>
                                        </div> <!-- .row -->
                                    </div>
                                    <div class="col-md-2">
                                        <a href="#" class="thumbnail">
                                            <img src="{{ asset('bundles/framework/img/image-missing.png') }}" id="preview_image" class="img-responsive" alt="...">
                                            {{ form_widget(form.logo, { attr: { 'class': 'choose-image' } }) }}
                                        </a>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Address</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.address, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Tél</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.phone, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">CP/Ville</label>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            {{ form_widget(form.postalCode, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_widget(form.city, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Fax</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.fax, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Pays</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.country, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Couriel</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.email, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Site web</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.website, { attr: { 'class': 'form-control' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Devise</label>
                                    </div>
                                    <div class="col-md-9">
                                        {{ form_widget(form.currency, { attr: { 'class': 'form-control' } }) }}
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="">Observation</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            {{ form_widget(form.description, { attr: { 'class': 'form-control', 'rows': '4' } }) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{ form_widget(form.submit) }}
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}